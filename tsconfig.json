{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@harri-io/playlist-explorer": ["libs/playlist-explorer/src/index.ts"],
      "@harri-io/movie-library": ["libs/movie-library/src/index.ts"]
    }
  }
}
